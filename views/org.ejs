<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script src="../js/app.js"></script>
    <title><%= org.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    
    <link href="https://fonts.googleapis.com/css?family=Caveat&amp;subset=cyrillic" rel="stylesheet">
    <script src="../js/companyAll.js"></script>
    <!-- Animate.css -->
    <link rel="stylesheet" href="../public/css/animate.css">
    <!-- Icomoon Icon Fonts
<link rel="stylesheet" href="css/icomoon.css">-->
    <!-- Simple Line Icons 
<link rel="stylesheet" href="css/simple-line-icons.css">-->
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="../public/css/bootstrap.css">
    <!-- Style -->
    <link rel="stylesheet" href="../public/css/style.css">
    <script src="../js/scripts.js"></script>

    <!-- Modernizr JS -->
    <script src="../js/modernizr-2.6.2.min.js"></script>
    <!------------------------------------------------------------>
    <script src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
    <!------------------------------------------------------------>

</head>

<body>

    <!-- Шапка -->
    <% include blocks/header.ejs %>
    <!-----заголовок страницы-->
    <section id="fh5co-hobby" data-section="hobby">
        <div class="container">
            <div class="row">
                <div class="col-md-12 section-heading text-center" id="nameOrgVolna">
                    <!---Заголовок-->
                    <h2> <%= org.name %></h2>


                </div>
            </div>
        </div>


        <div class="fh5co-project">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">

                        <div id="imgOrg">

                            <!---  <img src="<%= org.orgImg %>" class="img-fluid"/>-->
                            <img src="../public/images/slide2.jpg" class="img-fluid" />

                        </div>

                    </div>

                    <div class="col-md-4  text-justify">

                        <div id="contactsOrgVolna">
                            <%= org.adres %>
                        </div>
                        <div id="priceOrgVolna">
                            <%= org.phone %> <br>
                            <%= org.price %> <br>
                            <% org.metro.forEach(function(item) { %>
                            <li><%= item %></li>
                            <% }); %> <br>
                            <%= org.url %>
                        </div>
                        </ul>
                    </div>

                </div>
                <!-------------------Строка  описание -------------------------------------------------------->
                <div class="row">

                    <div class="col-md-12  text-justify">

                        <div id="descriptionOrgVolna">

                            <%=org.description %>
                        </div>

                    </div>

                </div>
                <!-------------------Строка  карта-------------------------------------------------------->
                <div class="row">

                    <div class="col-md-12">

                        <div id="map" style="width: 100%; height: 400px;"></div>

                        <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
                        <script type="text/javascript">
                            ymaps.ready(init);

                            function init() {
                                var myMap = new ymaps.Map("map", {
                                    center: [59.89444, 30.26417],
                                    zoom: 10
                                }, {
                                    searchControlProvider: 'yandex#search'
                                });

                                //  Метка с точкой по адресу.
                                ymaps.geocode('<%= org.adres %>').then(function (res) {
                                    var coord = res.geoObjects.get(0).geometry.getCoordinates();
                                    var myPlacemark = new ymaps.Placemark(coord, null, {
                                        preset: 'islands#darkGreenDotIcon'
                                    });
                                    myMap.geoObjects.add(myPlacemark);
                                });


                            }
                        </script>

                    </div>

                </div>
            </div>

    </section>
    <!-- Footer -->
    <% include blocks/footer.ejs %>
    <!-- jQuery -->
    <script src="../js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="../js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="../js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="../js/jquery.waypoints.min.js"></script>
    <!-- Stellar Parallax -->
    <script src="../js/jquery.stellar.min.js"></script>
    <!-- Counters -->
    <script src="../js/jquery.countTo.js"></script>
    <!-- Main JS (Do not remove) -->
    <script src="../js/main.js"></script>

</body>

</html>